pipeline {
  agent any
  environment {
    DOCKER_TOKEN = credentials("DOCKER_TOCKEN")
    // ORG = getOrg(env)
    // REPO = getRepo(env)
    // GIT_COMMIT = fetchGitCommitId()
    GIT_TOKEN = credentials("GitHub")
  }
  stages {
        stage("Build Status") {
            steps {
              script {
                setBuildStatus('pending', getOrg(env), getRepo(env), env.BUILD_URL, "${GIT_TOKEN}")
              }
            }
          }
        stage('Docker Login') {
            steps {
                echo 'Hello, Docker Login'
                sh 'docker --version'
                sh "docker login -u devopsmptech -p ${DOCKER_TOCKEN}"
            }
        }
        stage('Build') {
            agent { docker 'maven:3-alpine' } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
                sh 'mvn clean package'
            }
        }
        stage('Python') {
          agent {
              docker {
                  image 'python:latest'
              }
            }
            steps {
                sh '''
                python --version
                '''
            }
        }

    stage('Terraform') {
      agent {
          docker {
              image 'hashicorp/terraform:light'
              args '-i --entrypoint='
          }
        }
        steps {
            sh '''
            echo "kannan"
            terraform --version
            cd terraform/
            terraform init
            terraform plan
            '''
        }
    }
  }
post {
  always { 
          sh '''
            echo "I will execure always"
          '''
        }
  }
}
