pipeline {
  agent none
  stages {
    stage('Test') {
      agent {
          docker {
              image 'hashicorp/terraform:light'
              args '-i --entrypoint='
          }
        }
        steps {
            sh '''
            echo "kannan"
            terraform --version
            cd terraform/
            terraform init
            terraform plan
            '''
        }
    }
  }
}
